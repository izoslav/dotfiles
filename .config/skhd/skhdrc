##### MODES ##### 

# definitions
:: default	: ~/.config/skhd/mode_controller.sh default
:: launch @	: ~/.config/skhd/mode_controller.sh launch
:: resize @	: ~/.config/skhd/mode_controller.sh resize

# mode activationA
default < fn - space ; launch
default < fn - l ; launch
default < fn - r ; resize

# mode deactivation
launch, resize < escape ; default

# opens iTerm2
alt - return : ~/.config/scripts/open_iterm2.sh

##### DEFAULT MODE #####

# focus window
lalt - h : yabai -m window --focus west
lalt - j : yabai -m window --focus south
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east

# swap managed window
shift + lalt - h : yabai -m window --swap west
shift + lalt - j : yabai -m window --swap south
shift + lalt - k : yabai -m window --swap north
shift + lalt - l : yabai -m window --swap east

# resize window
lctrl + lalt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
lctrl + lalt - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
lctrl + lalt - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
lctrl + lalt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# equalize size of windows
lctrl + lalt - e : yabai -m space --balance

# enable / disable gaps in current workspace
lctrl + lalt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# toggle window zoom
lalt - d : yabai -m window --toggle zoom-parent
lalt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
lalt - e : yabai -m window --toggle split

# move focus container to workspace
shift + lalt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + lalt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + lalt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + lalt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + lalt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + lalt - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + lalt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + lalt - 8 : yabai -m window --space 8; yabai -m space --focus 8
shift + lalt - 9 : yabai -m window --space 9; yabai -m space --focus 9

# fast focus desktop
lctrl - h	: yabai -m space --focus prev
lctrl - l	: yabai -m space --focus next
lctrl - z	: yabai -m space --focus recent
lctrl - 1	: yabai -m space --focus 1
lctrl - 2	: yabai -m space --focus 2
lctrl - 3	: yabai -m space --focus 3
lctrl - 4	: yabai -m space --focus 4
lctrl - 5	: yabai -m space --focus 5
lctrl - 6	: yabai -m space --focus 6
lctrl - 7	: yabai -m space --focus 7
lctrl - 8	: yabai -m space --focus 8
lctrl - 9	: yabai -m space --focus 9

# create/delete spaces
lctrl + lalt - n	: yabai -m space --create
lctrl + lalt - w	: yabai -m space --destroy

##### RESIZE MODE #####

resize < left 	: yabai -m window --resize left:-50:0; \
			yabai -m window --resize right:-50:0
resize < down	: yabai -m window --resize bottom:0:50; \
			yabai -m window --resize top:0:50
resize < up	: yabai -m window --resize top:0:-50; \
			yabai -m window --resize bottom:0:-50
resize < right	: yabai -m window --resize right:50:0; \
			yabai -m window --resize left:50:0
resize < h 	: yabai -m window --resize left:-50:0; \
			yabai -m window --resize right:-50:0
resize < j	: yabai -m window --resize bottom:0:50; \
			yabai -m window --resize top:0:50
resize < k	: yabai -m window --resize top:0:-50; \
			yabai -m window --resize bottom:0:-50
resize < l	: yabai -m window --resize right:50:0; \
			yabai -m window --resize left:50:0

##### LAUNCH MODE #####
launch < b	: open -na /Applications/Brave\ Browser.app; skhd -k 'escape'
launch < c	: open -a /Applications/Docker.app; skhd -k 'escape'
launch < d	: open -a /Applications/Discord.app; skhd -k 'escape'
launch < e	: open -a /Applications/Messenger.app; skhd -k 'escape'
launch < f	: open ~; skhd -k 'escape'
launch < k	: open -a Calendar; skhd -k 'escape'
launch < m	: open -a Mail; skhd -k 'escape'
launch < o	: open "x-apple.systempreferences:"; skhd -k 'escape'
launch < p	: open -a /Applications/Spotify.app; skhd -k 'escape' 
launch < v	: open -na /Applications/Visual\ Studio\ Code.app; skhd -k 'escape'
launch < s	: open -a /Applications/Slack.app; skhd -k 'escape'
launch < x	: open -a /Applications/XIV\ on\ Mac.app; skhd -k 'escape'
